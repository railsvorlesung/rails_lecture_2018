
.container
  .row
    %h1
      = Book.model_name.human

  .row
    %table.table.table-striped
      %thead
        %tr
          %th= Book.human_attribute_name(:title)
          %th= Book.human_attribute_name(:summary)
          %th
            Flags
          %th{colspan: "3"}
      %tbody
        - @books.each do |book| 
          %tr
            %td= book.title
            %td= book.summary
            %td= book.flags
            %td= link_to 'Show', book, class: 'btn btn-default'
            %td= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary'
            %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    %br
    = link_to 'New Book', new_book_path, class: 'btn btn-succes'
